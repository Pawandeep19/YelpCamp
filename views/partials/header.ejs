    <body>


<!-- navbar -->
      <nav id="special" class="navbar navbar-expand-lg navbar fixed-top">
          <div class="navbar-header">       
            <a href="#" class="navbar-brand">
              <!-- icon -->
              <i class="fas fa-campground"></i>
             YELP CAMP</a>
          </div>
          <!-- navbar colapse button -->
          <button class="navbar-toggler" data-toggle="collapse" data-target="#navLinks" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"><i class="fas fa-bars"></i></span>
        </button>
          <!-- put everything in the class below to make that collapse -->
          <div class="collapse navbar-collapse" id="navLinks">
            <!-- right side bars -->
            <ul class="navbar-nav ml-auto">
              <li class="nav-item">
                <a href="/" class="nav-link">LANDING PAGE</a>
              </li>
              <li class="nav-item">
                <a href="/campground" class="nav-link">CAMPGROUNDS</a>
              </li>
              <% if(!currentUser){ %>
              <li class="nav-item">
                  <a href="/register" class="nav-link">SIGN UP</a>
              </li>
              <li class="nav-item">
                  <a href="/login" class="nav-link">SIGN IN</a>
              </li>
              <% } else{ %>    
              <li class="nav-item">
                  <a href="#" class="nav-link"><%= currentUser.username %></a>
              </li>
              <li class="nav-item">
                  <a href="/logout" class="nav-link">LOG OUT</a>
              </li>
              <% } %>
            </ul>
          </div>
      </nav>
<!-- navbar ends above -->

    