<%- include("../partials/header.ejs") %>
<!-- our css -->
<link rel="stylesheet" href="/stylesheets/campgroundPage.css">

<!-- progress bar -->
<div class="progress-bar" id="myProgressBar"></div>

<!-- jumbotron -->
<div class="container">
    <div class="jumbotron">
        <div class="container">
        <h1>Campgrounds</h1>
        <p>View from our hand-picked campgrounds from all over the world</p>
        <a class="btn btn-lg btn-primary" href="/campground/new">Add new Campground</a>
        </div>        
    </div>
</div>

<!-- campgrounds grid -->
<div id="sp">
    <div class="row">        
            <% for(var i=0;i<campgrounds.length;i++) { %>
            <div class="col-md-3 col-sm-6">
                <div class="card">
                    <img class="img-fluid" src=" <%= campgrounds[i].image %> " >
                    <p class="transparent"><a class="btn btn-sm" href="campground/<%=campgrounds[i]._id %>"> More Info</a></p>
                    <div class="caption">
                       <h4><%= campgrounds[i].name %></h4>
                    </div>
                </div>                
            </div>                              
            <% }; %>            
    </div>
</div>

  <!-- our javascript -->
<script type="text/javascript" src="/javascripts/campgroundPage.js"></script>


<%- include("../partials/footer.ejs") %>